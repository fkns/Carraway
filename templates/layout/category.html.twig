{% extends 'Layout/base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block contents %}
    <h1 class="title">
        {{ category.name }}
    </h1>

    <ul>
        {% set maxresult = 5 %}
        {% for article in articles %}
            <li><a href="{{ path('public_article', {'permalink': article.permalink}) }}">{{ article.title }}</a></li>
        {% endfor %}
    </ul>

    {% include 'components/pager.html.twig' with {pagename: 'category', title: category.name, articles: articles, page: page} %}
{% endblock %}