{% extends 'Layout/base.html.twig' %}

{% block contents %}
    <h1 class="title">
        Page: {{ page }}
    </h1>

    <p class="subtitle">
        <a href=".">A simple flat-file CMS.</a>
    </p>

    <ul>
        {% for article in articles %}
            <li><a href="{{ path('public_article', {'permalink': article.permalink}) }}">{{ article.title }}</a></li>
        {% endfor %}
    </ul>

    {% include 'components/pager.html.twig' with {pagename: 'page', title: 'page', articles: articles, page: page} %}
{% endblock %}